{
  "$id": "setting-pricing-set",
  "title": "Set Pricing Settings",
  "type": "object",
  "properties": {
    "content": {
      "type": "object",
      "properties": {
        "simple": {
          "type": "object",
          "properties": {
            "price": {
              "type": "number",
              "sanitize": "mongo"
            },
            "currency": {
              "type": "string",
              "sanitize": "mongo"
            }
          }
        },
        "convergentCharging": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "sanitize": "mongo"
            },
            "password" : {
              "type": "string",
              "sanitize": "mongo"
            },
            "user" : {
              "type": "string",
              "sanitize": "mongo"
            },
            "chargeableItemName" : {
              "type": "string",
              "sanitize": "mongo"
            }
          }
        },
        "type": {
          "type": "string",
          "sanitize": "mongo",
          "enum": ["simple", "convergentCharging"]
        }
      },
      "links": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "$ref": "common#/definitions/id"
            },
            "name": {
              "type": "string",
              "sanitize": "mongo"
            },
            "description": {
              "type": "string",
              "sanitize": "mongo"
            },
            "role": {
              "type": "string",
              "sanitize": "mongo"
            },
            "url": {
              "type": "string",
              "sanitize": "mongo"
            }
          }
        }
      },
      "required": [
        "type"
      ]
    },
    "id": {
      "type": "string",
      "sanitize": "mongo"
    },
    "identifier": {
      "type": "string",
      "sanitize": "mongo",
      "enum": ["pricing"]
    },
    "sensitiveData": {
      "nullable": true,
      "type": "array",
      "items": {
        "type": "string",
        "sanitize": "mongo"
      }
    }
  },
  "required": [
    "id",
    "identifier",
    "content"
  ]
}
