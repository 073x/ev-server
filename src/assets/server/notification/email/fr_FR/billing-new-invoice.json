{
  "subject": "Facturation - Nouvelle facture",
  "tenant": "<%- tenantID %>",
  "baseURL": "<%- evseDashboardURL %>",
  "body": {
    "header": {
      "title": "Facturation - Nouvelle facture",
      "image": {
        "left": {
          "height": 60,
          "url": "<%- tenantLogoURL %>"
        },
        "right": {
          "height": 50,
          "url": "<%- evseDashboardURL %>/assets/img/info.png"
        }
      }
    },
    "beforeActionLines": [
      "Cher <%- (user.firstName?user.firstName:user.name) %>,",
      "",
      "<% if(invoice.status === 'paid'){ %> Votre facture <%- invoice.number %> a été payée et est maintenant disponible. <% } else { %> Une nouvelle facture est disponible : <%- invoice.number %>. <br/><br/> Cliquez sur le lien ci-dessous pour finaliser le paiement. <% } %>"
    ],
    "actions": [{
      "title": "Consulter",
      "url": "<%- evseDashboardInvoiceURL %>"
    }, {
      "title": "Télécharger",
      "url": "<%- invoiceDownloadUrl %>"
    }, {
      "title": "Pay invoice",
      "url": "<%- payInvoiceUrl %>"
    }],
    "afterActionLines": [
      "Cordialement,",
      "EV Admins."
    ],
    "footer": {
    }
  }
}
